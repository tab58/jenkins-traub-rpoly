  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Mocha Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "runtimeExecutable": null,
      "args": ["./test.js", "--no-timeouts"],
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/index.js"
    }
  ]
}